{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2017",

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./src/*"]
    },

    /* Emit */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist",
    "importsNotUsedAsValues": "error",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true
  },
  "include": ["src/**/*"]
}
